<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>

     <style>
      body{
        
        background-image: url("data:image/jpeg;base64,");
        
      }
      </style>
  </head>
  <body>
    <%- include("../partials/navbar") %>

    <div class="container">
      <h1 style="margin-left: 40%; color: white;">All Blogs</h1>
<hr style="color: white"></hr>
</div>

<div class="container" style="background-color: aqua">
<div class="row">
      <% for(let blog of blogs){ %>
   <div class="col-md-6 col-lg-6 col-sm-12">
        <h3 class="text-center pt-5"><%= blog.title %>
        </h3>
        <div class="d-flex justify-content-center">
        <img class="rounded" style="width: 70%" src="<%= blog.img %> " alt="blog pic" />
        </div>

        <p class="text-center pt-1 mb-8">
          <%= blog.text %>
        </p>
        <p class="text-center pt-1"><small></small><i><%= blog.auther %></i></small>
        </p>

      <p class="text-center pt-1"><small></small><i><%= blog.date %></i></small></p>
       <p> <a href="/blogs/<%= blog._id %>">See Details</a></p>
         <hr style="color: rgb(13, 0, 255)"></hr>
      </div>
      <% } %>
    </div>
    </div>
  </div>

    </div>
    <%- include("../partials/footer") %>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
